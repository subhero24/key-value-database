{
	"include": ["source/**/*", "test/**/*"],
	"compilerOptions": {
		"jsx": "react-jsx",
		"strict": true,
		"allowJs": true,
		"checkJs": true,
		"module": "ESNext",
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "build/types",
		"declarationMap": true,
		"moduleResolution": "Bundler",
		"noUnusedLocals": false,
		"noUnusedParameters": false
	}
}
