{
	"compilerOptions": {
		"jsx": "react-jsx",
		"checkJs": true,
		// Generate d.ts files
		"declaration": true,
		// "noEmit": false,
		// This compiler run should
		// only output d.ts files
		// "emitDeclarationOnly": true,
